<vsui:DialogWindow x:Class="UniversalImageScaler.ImageResizeDialog"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:UniversalImageScaler"
        xmlns:models="clr-namespace:UniversalImageScaler.Models"
        xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.14.0"
        mc:Ignorable="d"
        Title="Scaled image generator"
        ResizeMode="CanResizeWithGrip"
        Width="450"
        Height="500"
        Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
        d:DataContext="{d:DesignInstance Type=models:SourceImage, IsDesignTimeCreatable=True}">

    <vsui:DialogWindow.Resources>
        <DataTemplate DataType="{x:Type models:OutputFeature}">
            <TextBlock Text="{Binding Name}" />
        </DataTemplate>
    </vsui:DialogWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="10" Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Left">
            <TextBlock Text="{Binding FileName}" />
            <Border
                HorizontalAlignment="Left" 
                Margin="0,5,0,0"
                BorderThickness="1"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}">
                <Image
                    Stretch="Uniform"
                    Width="150"
                    Height="150"
                    Source="{Binding Image}" />
            </Border>
            <TextBlock Margin="0,10">
                <Run Text="The destination folder is: " /><Run Text="{Binding FullDir, Mode=OneTime}" />
                <LineBreak />
                <Run Text="What images would you like to create?" />
            </TextBlock>
            <ComboBox ItemsSource="{Binding Features}" SelectedItem="{Binding Feature}" HorizontalAlignment="Left" />
        </StackPanel>
        <Grid Grid.Row="1" Grid.IsSharedSizeScope="True" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Buttons" />
                <ColumnDefinition Width="Auto" SharedSizeGroup="Buttons" />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5" />
                    <Setter Property="Padding" Value="10,1" />
                </Style>
            </Grid.Resources>
            <Button Grid.Column="0" Name="OkButton" Content="OK" Click="OnOk" IsDefault="True" />
            <Button Grid.Column="1" Name="CancelButton" Content="Cancel" Click="OnCancel" IsCancel="True" />
        </Grid>
    </Grid>
</vsui:DialogWindow>
